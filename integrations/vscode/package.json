{
  "name": "vscode-integrations",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "watch": "node --import tsx --env-file=scripts/local.env scripts/webpack.ts watch",
    "build": "node --import tsx --env-file=scripts/prod.env scripts/webpack.ts build"
  },
  "publisher": "sherluok",
  "displayName": "Blog Content Manager",
  "description": "Post editor & assets manager for sherluok.com",
  "main": ".build/extension.js",
  "activationEvents": [
    "onFileSystem:post",
    "onFileSystem:blob",
    "onWebviewPanel:post-preview"
  ],
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "blobs",
          "name": "Blobs"
        },
        {
          "id": "posts",
          "name": "Posts"
        },
        {
          "id": "references",
          "name": "References"
        }
      ]
    },
    "commands": [
      {
        "command": "blobs.pickAndUploadFile",
        "title": "Pick a File to Upload",
        "icon": "$(plus)"
      },
      {
        "command": "blobs.refresh",
        "title": "Refresh Blob List",
        "icon": "$(refresh)"
      },
      {
        "command": "blobs.delete",
        "title": "Delete Blob"
      },
      {
        "command": "posts.refresh",
        "title": "Refresh Post List",
        "icon": "$(refresh)"
      },
      {
        "command": "posts.add",
        "title": "Create New Post",
        "icon": "$(plus)"
      },
      {
        "command": "posts.publish",
        "title": "Publish Post"
      },
      {
        "command": "posts.unpublish",
        "title": "Unpublish Post"
      },
      {
        "command": "posts.revoke",
        "title": "Temporarily Delete Post"
      },
      {
        "command": "posts.recover",
        "title": "Recover Post"
      },
      {
        "command": "posts.delete",
        "title": "Permanently Delete Post"
      }
    ],
    "menus": {
      "view/title": [
        {
          "when": "view == blobs",
          "command": "blobs.refresh",
          "group": "navigation"
        },
        {
          "when": "view == blobs",
          "command": "blobs.pickAndUploadFile",
          "group": "navigation"
        },
        {
          "when": "view == posts",
          "command": "posts.refresh",
          "group": "navigation"
        },
        {
          "when": "view == posts",
          "command": "posts.add",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "when": "view == blobs",
          "command": "blobs.delete"
        },
        {
          "when": "view == posts",
          "command": "posts.delete"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "blobs",
        "contents": "Welcome to Blobs Manager, there is no blob yet, please \n[Upload](command:blobs.pickAndUploadFile)\n a file to get start. Then you can upload new file by drag file into this view"
      }
    ]
  },
  "engines": {
    "vscode": "^1.92.1"
  },
  "devDependencies": {
    "@prisma/client": "^5.21.0",
    "@types/mdast": "^4.0.4",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.4.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@types/unist": "^3.0.3",
    "@types/vscode": "^1.94.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "prisma": "^5.21.0",
    "ts-loader": "^9.5.1",
    "tsconfig-paths-webpack-plugin": "^4.1.0",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.0.1",
    "@stefanprobst/rehype-extract-toc": "^2.2.0",
    "@vanilla-extract/css": "^1.16.0",
    "@vanilla-extract/recipes": "^0.5.5",
    "mdast-util-from-markdown": "^2.0.1",
    "mdast-util-to-markdown": "^2.1.0",
    "mdast-util-to-string": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype": "^13.0.2",
    "rehype-pretty-code": "^0.14.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "rxjs": "^7.8.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "unist-util-visit-parents": "^6.0.1"
  }
}
