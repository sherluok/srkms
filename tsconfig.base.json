{
  "compilerOptions": {
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "target": "ESNext",
    "strict": true,
    "pretty": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "composite": false,
    "incremental": false,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleDetection": "auto",
    "strictNullChecks": true,
    "preserveSymlinks": false,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "allowArbitraryExtensions": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "${configDir}/src/**/*",
  ],
  "exclude": [
    "node_modules",
    "${configDir}/out",
    "${configDir}/dist",
  ],
}
